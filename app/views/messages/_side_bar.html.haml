.Side-bar
  .Side-bar__user-name
    .Top-items
      %h3.Top-items__user-name
        = current_user.name
      %ul.Top-items__icons
        %li.icon
          = link_to new_group_path do
            = icon('fas', 'edit', class: "icon__edit")
        %li.icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "icon__setting")

  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Group-heading
        = link_to group_messages_path(group) do
          .Group-heading__title
            = group.name
          .Group-heading__latest-message
            = group.show_last_message
    